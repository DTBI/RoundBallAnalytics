import sqlite3 as sql

def insertUser(username,password):
    con = sql.connect("C:/Users/Samuel Trostle/Desktop/RoundBallSiteV7/db.roundball")
    c = con.cursor()
    c.execute("INSERT OR IGNORE INTO user (username,password) VALUES (?,?)", (username,password))
    con.commit()
    con.close()

def retrieveUsers():
	con = sql.connect("C:/Users/Samuel Trostle/Desktop/RoundBallSiteV7/db.roundball")
	c = con.cursor()
	c.execute("SELECT username, password FROM user")
	user = c.fetchall()
	con.close()
	return user
